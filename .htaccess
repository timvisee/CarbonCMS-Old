# Enable mod rewrite
Options +FollowSymLinks
RewriteEngine On

# Rewrite some conditions
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

# Route every request to the correct index.php page
RewriteRule ^(.*)$ index.php/$1 [L]